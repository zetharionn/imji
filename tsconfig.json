{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noEmit": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@app/*": ["./app/*"],
			"@views/*": ["./views/*"],
			"@widgets/*": ["./widgets/*"],
			"@features/*": ["./features/*"],
			"@entities/*": ["./entities/*"],
			"@shared/*": ["./shared/*"]
		},
		"allowJs": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictFunctionTypes": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}
